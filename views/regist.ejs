  <div class="col-md-4 col-md-offset-4 regist">
    <form>
      <h2 class="title">注册账户</h2>
      <div class="form-group ">
        <label for="exampleInputEmail1" class="control-label">邮箱：</label>
        <input type="email" class="form-control" id="email" autofocus placeholder="Email">

      </div>
      <div class="form-group">
        <label for="exampleInputPassword1" class="control-label">密码：</label>
        <input type="password" class="form-control" id="password" placeholder="Password">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">重复密码：</label>
        <input type="password" class="form-control" id="repeatPassword" placeholder="Password">
      </div>

    </form>
    <div class="col-md-4 col-md-offset-4">
